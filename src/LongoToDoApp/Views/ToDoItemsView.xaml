<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LongoToDoApp.Views.ToDoItemsView"
    x:Name="_toDoItemsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:LongoToDoApp.Converters;assembly=LongoToDoApp"
    xmlns:prism="http://prismlibrary.com"
    xmlns:translate="clr-namespace:LongoToDoApp.Extensions">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToTextColorConverter
                x:Key="boolToTextColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid
        RowDefinitions="Auto,*,Auto">
        <Ellipse
            Grid.Row="0"
            Fill="#FAE06F"
            HeightRequest="600"
            Margin="0,-400,0,0"
            WidthRequest="700"/>
        <Grid
            Grid.Row="0"
            ColumnDefinitions="Auto,*"
            Margin="20,0"
            RowDefinitions="*">
            <Image
                Grid.Column="0"
                Grid.Row="0"
                Aspect="AspectFit"
                HeightRequest="70"
                Source="emoji.png"/>
            <StackLayout
                Grid.Column="1"
                Grid.Row="0"
                Margin="10,0,0,0"
                VerticalOptions="Center">
                <Label
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{translate:Translate WellcomeLbl}"
                    VerticalOptions="Center" />
                <Label
                    FontSize="15"
                    TextColor="#696969">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span
                                Text="{translate:Translate PendingTasksStartLbl}" />
                            <Span
                                Text="{Binding NumberItems}" />
                            <Span
                                Text=" " />
                            <Span
                                Text="{translate:Translate PendingTasksEndLbl}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
        </Grid>
        <RefreshView
            Grid.Row="1"
            Command="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsBusy}"
            Margin="20,20">
            <CollectionView
                ItemsSource="{Binding ToDoItems}"
                SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItemView
                                    Command="{Binding Path=BindingContext.DeleteItemCommand, Source={x:Reference _toDoItemsPage}}"
                                    CommandParameter="{Binding .}"
                                    WidthRequest="120">
                                    <HorizontalStackLayout
                                        BackgroundColor="#FF5555"
                                        Padding="10,5">
                                        <Image
                                            Aspect="AspectFill"
                                            Source="trash_icon.png" />
                                        <Label
                                            FontSize="20"
                                            Margin="5,0,0,0"
                                            Text="{translate:Translate Delete}"
                                            TextColor="White"
                                            VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </SwipeItemView>
                            </SwipeView.RightItems>
                            <Grid
                                ColumnDefinitions="Auto,*"
                                RowDefinitions="Auto">
                                <CheckBox
                                    x:Name="chkIsComplete"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    Color="#696969"
                                    IsChecked="{Binding IsComplete}"
                                    VerticalOptions="Center">
                                    <CheckBox.Behaviors>
                                        <prism:EventToCommandBehavior
                                            EventName="CheckedChanged"
                                            Command="{Binding Path=BindingContext.CheckedCommand, Source={x:Reference _toDoItemsPage}}"
                                            CommandParameter="{Binding .}"/>
                                    </CheckBox.Behaviors>
                                </CheckBox>
                                <Label
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    FontSize="20"
                                    Text="{Binding Name}"
                                    TextColor="{Binding Path=IsChecked, Source={Reference chkIsComplete}, Converter={StaticResource boolToTextColorConverter}}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        <Button
            Grid.Row="2"
            BackgroundColor="#19C0B8"
            Command="{Binding NavigateToCreateItemCommand}"
            CornerRadius="0"
            Text="{translate:Translate New}"
            TextColor="White"
            VerticalOptions="EndAndExpand" />
    </Grid>
</ContentPage>
